{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2016",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [],
    "paths": {
      "@project/theme/*": ["src/*/public-api"]
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "theme.js",
    "flatModuleId": "@project/theme"
  },
  "files": [
    "./src/public-api.ts"
  ]
}
